
<% if @article.errors.any? %>
<h1> Sorry theres been the following error(s)</h1>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
   <li><%= msg %></li>
  <%end%>
</ul>
<% end %>

<%= form_for @article do |f| %> <!-- #terrible naming convention would name this object a or art -->
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %> <br/>

  </p>


<% end %>

